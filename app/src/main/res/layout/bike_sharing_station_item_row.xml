<?xml version="1.0" encoding="utf-8"?>
<com.andexert.library.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anytextview="http://schemas.android.com/apk/res-auto"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    ripple:rv_rippleDuration="200">

    <LinearLayout
        android:id="@+id/item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/stazione_sanbiagio" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:id="@+id/item_name_label"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="piazza Mazzini"
            android:textColor="@color/White"
            anytextview:typeface="@string/generic_text_font" />
    </LinearLayout>
</com.andexert.library.RippleView>

