<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anytextview="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MainAppColor"
    android:orientation="vertical"
    tools:context=".activities.BikeSharingStationInfoActivity"
    android:clickable="false">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/title_bar_left_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/icone_indietro" />

        <com.ctrlplusz.anytextview.AnyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/action_bar_title"
            android:textColor="@color/MainAppColor"
            android:textSize="18sp"
            anytextview:typeface="@string/main_title_font" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/cyclePathNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome pista ciclabile"
                    android:textColor="@color/MainAppColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    anytextview:typeface="@string/generic_text_font" />

                <com.ctrlplusz.anytextview.AnyTextView
                    android:id="@+id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descrizione"
                    android:textColor="@color/Black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    anytextview:typeface="@string/generic_text_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_background"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:orientation="vertical">

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="tipo"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="distanza"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="fondo"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="adatta ai bambini"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="adatta ai pattinatori"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/White" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="strada"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathDistanceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.9 km"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathRoadSurfaceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="asfalto"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathSuitableForChildrenLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="no"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathSuitableForSkatersLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="no"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_background"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical|center_horizontal|right"
                    android:orientation="vertical">

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pendenza media"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="pendenza massima"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="densitÃ  tracciato"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dislivello"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dislivello salita"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dislivello discesa"
                        android:textColor="@color/White"
                        anytextview:typeface="@string/generic_text_font" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/White" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1.0"
                    android:gravity="left|center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathAverageSlopeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.5 %"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathMaxSlopeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 %"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathTrackDensityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.7 punti/km"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathDifferenceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="31 m"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathAscentDifferenceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="44 m"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />

                    <com.ctrlplusz.anytextview.AnyTextView
                        android:id="@+id/cyclePathDescentDifferenceLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18 m"
                        android:textColor="@color/White"
                        android:textStyle="bold"
                        anytextview:typeface="@string/generic_text_font" />
                </LinearLayout>

            </LinearLayout>

            <com.ctrlplusz.anytextview.AnyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow_background"
                android:text="Indicazioni - Apri Google Maps"
                android:textColor="@color/White"
                android:id="@+id/launchGoogleMapsLabel"
                android:layout_marginTop="5dp"
                anytextview:typeface="@string/generic_text_font"
                android:drawableLeft="@drawable/ic_action_directions"
                android:gravity="center_vertical" />

            <fragment
                android:id="@+id/cyclePathLocationMap"
                class="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="5dp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
